<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View list', products_path %></li>
  <li><%= link_to 'New Product', new_product_path %></li>
</ul>


<h1>Listing products</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Permalink</th>
      <th>Description</th>
      <th>Company</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= product.permalink %></td>
        <td><%= product.description %></td>
        <td><%= product.company %></td>
        <td><%= product.brand %></td>
        <td><%= link_to 'Show', product, class:'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class:'btn btn-default' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>